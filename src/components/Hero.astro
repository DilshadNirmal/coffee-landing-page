---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Link from "./Link.astro";

import coffeBeans from "../assets/hero-coffee-beans.png";
import coffeeCup from "../assets/hero-coffee.png";
---

<header>
    <Image src={coffeBeans} alt="" 
        class="absolute right-0 top-0 -z-10" 
    />
    <div class="container flex flex-wrap-reverse justify-around items-center">
        <div class="grid gap-4 md:basis-1/3">
            <h1 class="text-3xl md:text-4xl font-bold leading-snug text-dark1 text-balance">
                The <span class="text-accent1">coffee</span> you will fall in <span class="text-accent1">love</span> with
            </h1>
            <p class="text-balance max-w-prose">
                Sip, savor, and spread the love - where every cup is a caffeinated hug at our cozy coffee haven!
            </p>
            <Link href="#">
                <span>Order Now</span>
                <Icon name="cart" size={18} />
            </Link>
        </div>
        <Image src={coffeeCup} alt="coffee cup" class="md:basis-1/3" />
    </div>
</header>